<!--pages/other/login.wxml-->

<view class='form'>
   <view class='form-ctrl'>
      <label>手机号</label>
      <input class='txt' data-name="phonecode" bindinput='inputChange' placeholder='请输入手机号'></input>
   </view>
   <view class='bd'></view>
   <view class='form-ctrl'>
      <label>登录密码</label>
      <input type='password' data-name="password" bindinput='inputChange' class='txt' placeholder='请输入登录密码'></input>
   </view>
</view>
 <view style='text-align:right;margin:30rpx 10rpx;'>
      <checkbox>记住密码</checkbox>
   </view>
   <button class='btn' bindtap='tapLogin'>登录</button>