/* pages/center/taobao.wxss */

.upload {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.upload .item1 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  flex-wrap: wrap;
  width: 440rpx;
}

.upload .item1 .img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx
}

.item1 .row {
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  box-sizing: border-box;
}

.btn-upload {
  background: #f2f2f2;
  font-size: 200rpx;
  font-weight: bold;
  width: 200rpx;
  height: 200rpx;
  line-height: 160rpx;
  display: inline-block;
  color: #e6e6e6;
  border-radius: 20rpx;
  margin: 20rpx 0;
}

.box {
  width: 200rpx;
  height: 200rpx;
}
